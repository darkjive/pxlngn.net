---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
import type { Item } from '~/types';
import Image from '~/components/common/Image.astro';

export interface Props {
  items?: Array<Item>;
  defaultIcon?: string;
  classes?: Record<string, string>;
}

const { items = [], classes = {}, defaultIcon } = Astro.props as Props;

const {
  container: containerClass = '',
  panel: panelClass = '',
  title: titleClass = '',
  description: descriptionClass = '',
  icon: defaultIconClass = 'text-primary border-primary dark:border-primary',
} = classes;
---

{
  items && items.length && (
    <div class={containerClass}>
      {items.map(({ title, description, icon, logo, classes: itemClasses = {} }, index = 0) => (
        <div class={twMerge('flex', panelClass, itemClasses?.panel)}>
          <div class="mr-4 flex flex-col items-center rtl:ml-4 rtl:mr-0">
            <div>
              <div class="flex items-center justify-center">
                {(icon || defaultIcon) && (
                  <Icon
                    name={icon || defaultIcon}
                    class={twMerge('h-10 w-10 rounded-full border-2 p-2', defaultIconClass, itemClasses?.icon)}
                  />
                )}
              </div>
            </div>
            {index !== items.length - 1 && <div class="h-full w-px bg-black/10 dark:bg-slate-400/50" />}
          </div>
          <div class={`pt-1 ${index !== items.length - 1 ? 'pb-8' : ''} relative w-full`}>
            {title && (
              <p
                data-animate
                data-anim-type="fade-up"
                data-anim-delay={index * 150}
                class={twMerge('text-xl font-semibold text-black dark:text-white', titleClass, itemClasses?.title)}
                set:html={title}
              />
            )}
            {description && (
              <div
                data-animate
                data-anim-type="fade-up"
                data-anim-delay={index * 150 + 100}
                class={twMerge('mt-2 text-muted', descriptionClass, itemClasses?.description)}
                set:html={description}
              />
            )}
            {logo && (
              <Image
                src={logo.src}
                alt={logo.alt || 'Logo'}
                class={twMerge(
                  'relative right-0 top-0 mt-5 rounded-lg bg-white p-2 shadow-lg sm:absolute sm:mt-0',
                  logo.classes
                )}
                width={100}
                height={70}
                layout="contained"
              />
            )}
          </div>
        </div>
      ))}
    </div>
  )
}
