---
/**
 * Skill Radar Chart Component
 * Animated spider/radar chart showing skill distribution
 */
import type { SkillRadar } from '~/types';
import '~/assets/styles/skill-radar.css';

type Props = SkillRadar & {
  chartType?: 'tech' | 'soft';
};

const { class: className, chartType = 'tech' } = Astro.props;
const chartId = `skillRadarChart-${chartType}`;
---

<div class={`skill-radar-container ${className || ''}`}>
  <canvas id={chartId} data-chart-type={chartType}></canvas>
</div>

<!-- Load Chart.js from CDN -->
<script is:inline src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
