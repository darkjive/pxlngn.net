RewriteEngine On

# Redirect /defaultsite permanently to root
RewriteRule ^defaultsite/?$ / [R=301,L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Set DirectoryIndex
DirectoryIndex index.html

# Cache-Control Headers für statische Assets
<IfModule mod_headers.c>
  # Icons - 1 Jahr Cache (immutable)
  <FilesMatch "\.(png|jpg|jpeg|gif|svg|ico|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Fonts - 1 Jahr Cache (immutable)
  <FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # CSS und JS aus _astro - 1 Jahr Cache (immutable)
  <FilesMatch "^_astro/.*\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# Handle SPA routing (falls benötigt)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]