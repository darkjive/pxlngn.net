/*
  # Security Headers

  # Content Security Policy - Allows inline scripts and styles needed for Astro
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.splitbee.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://cdn.splitbee.io https://cdn.pixabay.com https://img.icons8.com; frame-ancestors 'self'; base-uri 'self'; form-action 'self'

  # HTTP Strict Transport Security - Force HTTPS for 1 year
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cross-Origin-Opener-Policy - Isolate browsing context
  Cross-Origin-Opener-Policy: same-origin

  # X-Content-Type-Options - Prevent MIME sniffing
  X-Content-Type-Options: nosniff

  # X-Frame-Options - Prevent clickjacking
  X-Frame-Options: SAMEORIGIN

  # X-XSS-Protection - Enable XSS filter
  X-XSS-Protection: 1; mode=block

  # Referrer Policy - Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy - Control browser features
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()

# Cache static assets
/*.js
  Cache-Control: public, max-age=31536000, immutable

