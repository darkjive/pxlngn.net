---
import type { HTMLTag } from 'astro/types';
import type { Widget } from '~/types';
import { twMerge } from 'tailwind-merge';
import Background from './Background.astro';

export interface Props extends Widget {
  containerClass?: string;
  ['as']?: HTMLTag;
  ['data-aos']?: string;
  ['data-aos-delay']?: string;
  ['data-aos-duration']?: string;
  ['data-aos-easing']?: string;
}

const { id, isDark = false, containerClass = '', bg, as = 'section', ...restProps } = Astro.props;

const WrapperTag = as;
---

<WrapperTag class="relative not-prose scroll-mt-[80px]" {...id ? { id } : {}} {...restProps}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : <Background isDark={isDark} />}
    </slot>
  </div>
  <div
    class:list={[
      twMerge(
        'relative mx-auto max-w-5xl px-4 md:px-6 pt-12 md:pt-16 lg:pt-20 pb-12 md:pb-16 lg:pb-20 text-default',
        containerClass
      ),
      { dark: isDark },
    ]}
  >
    <slot />
  </div>
</WrapperTag>
