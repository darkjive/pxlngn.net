---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
} = Astro.props;

const url = new URL(Astro.url);
const currentPath = `/${trimSlash(url.pathname)}`;
const currentHash = url.hash; // Enth√§lt den #anchor-Teil der URL
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'top-0 z-40 flex-none mx-auto w-full bg-white dark:bg-black border-b border-gray-200/100 dark:border-gray-500/20',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class="absolute inset-0"></div>
  <div
    class:list={[
      'relative py-3 px-3 md:px-6 mx-auto w-full',
      {
        'md:flex md:justify-between': position !== 'center',
      },
      {
        'md:grid md:grid-cols-3 md:items-center': position === 'center',
      },
      {
        'max-w-5xl': !isFullWidth,
      },
    ]}
  >
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between']}>
      <a class="flex items-center" href={getHomePermalink()}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex md:mx-5 overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto justify-self-center"
      aria-label="Hauptnavigation"
    >
      <ul
        class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-[2rem] md:text-[0.9375rem] tracking-[0.01rem] font-medium text-base justify-center"
      >
        {
          links.map(({ text, href, links, icon }) => {
            const isActive = href === currentPath || href === currentHash || href === `${currentPath}${currentHash}`;
            return (
              <li class={links?.length ? 'dropdown' : ''}>
                {links?.length ? (
                  <>
                    <a
                      class:list={[
                        'hover:text-primary dark:hover:text-primary px-4 py-3 flex items-center whitespace-nowrap',
                        { 'aw-link-active': isActive },
                      ]}
                      href={href}
                      role="button"
                      aria-haspopup="true"
                      aria-expanded="false"
                    >
                      {icon && <Icon name={icon} class="text-muted w-6 h-6 mr-2 hidden md:inline" />}
                      {text}
                    </a>
                    <ul class="dropdown-menu dark:md:bg-dark rounded md:absolute pl-4 md:pl-0 md:hidden font-medium md:bg-white/100 md:min-w-[200px] drop-shadow-xl">
                      {links.map(({ text: text2, href: href2, icon: icon2 }) => {
                        const isSubActive =
                          href2 === currentPath || href2 === currentHash || href2 === `${currentPath}${currentHash}`;
                        return (
                          <li>
                            <a
                              class:list={[
                                'hover:text-primary text-base py-2 px-5 block whitespace-no-wrap border-b md:border-0 border-gray-200/100 dark:border-gray-500/20',
                                { 'aw-link-active': isSubActive },
                              ]}
                              href={href2}
                            >
                              {icon2 && <Icon name={icon2} class="text-muted w-5.5 h-5.5 mr-2 inline-block" />}
                              {text2}
                            </a>
                          </li>
                        );
                      })}
                    </ul>
                  </>
                ) : (
                  <a
                    class:list={[
                      'first:rounded-t last:rounded-b hover:text-primary px-4 py-3 flex items-center whitespace-nowrap',
                      { 'aw-link-active': isActive },
                    ]}
                    href={href}
                  >
                    {icon && <Icon name={icon} class="text-muted w-6 h-6 mr-2 hidden md:inline" />}
                    {text}
                  </a>
                )}
              </li>
            );
          })
        }
      </ul>
    </nav>
    <!-- Buttons -->
    <div
      class:list={[
        { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'right' },
        'hidden md:self-center md:flex items-center md:mb-0 fixed w-full md:w-auto md:static justify-end left-0 rtl:left-auto rtl:right-0 bottom-0 p-3 md:p-0 md:justify-self-end',
      ]}
    >
      <div class="items-center flex justify-between w-full md:w-auto">
        <div class="flex">
          {showToggleTheme && <ToggleTheme iconClass="w-6 h-6 md:w-5 md:h-5 md:inline-block" />}
          {
            showRssFeed && (
              <a
                class="text-muted bg-gray-100 hover:text-primary hover:bg-gray-100 dark:bg-gray-900/60 dark:hover:bg-gray-900/70 rounded-lg text-sm p-2.5 inline-flex items-center ml-3"
                aria-label="RSS Feed"
                href={getAsset('/rss.xml')}
              >
                <Icon name="tabler:rss" class="w-5 h-5" />
              </a>
            )
          }
          {
            actions?.length ? (
              <a
                class="text-muted bg-gray-100 hover:text-primary hover:bg-gray-100 dark:bg-gray-900/60 dark:hover:bg-gray-900/70 rounded-lg text-sm p-2.5 inline-flex items-center ml-3"
                href={actions?.[0].href}
              >
                <Icon name="tabler:brand-github" class="w-5 h-5" />
              </a>
            ) : (
              ''
            )
          }
          {
            actions?.length ? (
              <a
                class="text-muted bg-gray-100 hover:text-primary hover:bg-gray-100 dark:bg-gray-900/60 dark:hover:bg-gray-900/70 rounded-lg text-sm p-2.5 inline-flex items-center ml-3"
                href={actions?.[1].href}
              >
                <Icon name="tabler:mail" class="w-5 h-5" />
              </a>
            ) : (
              ''
            )
          }
        </div>
      </div>
    </div>
  </div>
</header>
