---

import type { HTMLAttributes } from 'astro/types';
import { findImage } from '~/utils/images';
import {
  getImagesOptimized,
  astroAsseetsOptimizer,
  unpicOptimizer,
  isUnpicCompatible,
  type ImageProps,
} from '~/utils/images-optimization';

type Props = ImageProps & {
  futuristicEffect?: 'cyber' | 'neon' | 'minimal';
  glowColor?: string;
};

type ImageType = {
  src: string;
  attributes: HTMLAttributes<'img'>;
};

const props = Astro.props;
const { futuristicEffect = 'cyber', glowColor = 'cyan' } = props;

if (props.alt === undefined || props.alt === null) {
  throw new Error('Alt text is required for FuturisticImage');
}

if (typeof props.width === 'string') {
  props.width = parseInt(props.width);
}

if (typeof props.height === 'string') {
  props.height = parseInt(props.height);
}

if (!props.loading) {
  props.loading = 'lazy';
}

if (!props.decoding) {
  props.decoding = 'async';
}

const _image = await findImage(props.src);

let image: ImageType | undefined = undefined;
let blurDataUrl: string | undefined = undefined;

if (
  typeof _image === 'string' &&
  (_image.startsWith('http://') || _image.startsWith('https://')) &&
  isUnpicCompatible(_image)
) {
  image = await getImagesOptimized(_image, props, unpicOptimizer);
} else if (_image) {
  
  if (!props.format) {
    props.format = 'avif';
  }
  image = await getImagesOptimized(_image, props, astroAsseetsOptimizer);

  const blurImage = await getImagesOptimized(
    _image,
    { ...props, width: 20, height: 20, format: 'webp' },
    astroAsseetsOptimizer
  );
  blurDataUrl = blurImage.src;
}

const uniqueId = `futuristic-img-${Math.random().toString(36).substr(2, 9)}`;
---

{
  !image ? (
    <Fragment />
  ) : (
    <div class={`futuristic-image-wrapper ${futuristicEffect}`} data-futuristic-wrapper id={uniqueId}>
      
      <div class="futuristic-skeleton" data-futuristic-skeleton>
        <div class="skeleton-inner">
          
          <div class="scanlines"></div>

          <div class="corner-bracket top-left"></div>
          <div class="corner-bracket top-right"></div>
          <div class="corner-bracket bottom-left"></div>
          <div class="corner-bracket bottom-right"></div>

          <div class="loading-bar">
            <div class="loading-progress"></div>
          </div>

          <div class="loading-text">
            <span class="text-glow">INITIALIZING</span>
            <span class="loading-dots">
              <span>.</span><span>.</span><span>.</span>
            </span>
          </div>
        </div>
      </div>

      {blurDataUrl && (
        <img
          src={blurDataUrl}
          alt=""
          aria-hidden="true"
          class="blur-placeholder"
          data-blur-placeholder
        />
      )}

      <img
        src={image.src}
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
        class="futuristic-image"
        data-futuristic-image
        data-glitch={props['data-glitch']}
        {...image.attributes}
      />
    </div>
  )
}

<style is:global define:vars={{ glowColor }}>
  .futuristic-image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    background: linear-gradient(135deg, rgba(13, 173, 221, 0.9) 0%, rgba(247, 182, 3, 0.9) 100%);
  }

  .futuristic-skeleton {
    position: absolute;
    inset: 0;
    z-index: 10;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .futuristic-skeleton.loaded {
    opacity: 0;
    pointer-events: none;
  }

  .skeleton-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 195, 255, 0.03) 0px,
      rgba(0, 195, 255, 0.03) 1px,
      transparent 1px,
      transparent 2px
    );
    animation: scanline-move 8s linear infinite;
    pointer-events: none;
  }

  @keyframes scanline-move {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(100%);
    }
  }

  .corner-bracket {
    position: absolute;
    width: 30px;
    height: 30px;
    border-color: var(--glowColor, cyan);
    opacity: 0.8;
    animation: bracket-pulse 2s ease-in-out infinite;
  }

  .corner-bracket.top-left {
    top: 10px;
    left: 10px;
    border-top: 2px solid;
    border-left: 2px solid;
    box-shadow:
      -2px -2px 10px rgba(0, 195, 255, 0.5),
      inset -1px -1px 5px rgba(0, 195, 255, 0.3);
  }

  .corner-bracket.top-right {
    top: 10px;
    right: 10px;
    border-top: 2px solid;
    border-right: 2px solid;
    box-shadow:
      2px -2px 10px rgba(0, 195, 255, 0.5),
      inset 1px -1px 5px rgba(0, 195, 255, 0.3);
    animation-delay: 0.5s;
  }

  .corner-bracket.bottom-left {
    bottom: 10px;
    left: 10px;
    border-bottom: 2px solid;
    border-left: 2px solid;
    box-shadow:
      -2px 2px 10px rgba(0, 195, 255, 0.5),
      inset -1px 1px 5px rgba(0, 195, 255, 0.3);
    animation-delay: 1s;
  }

  .corner-bracket.bottom-right {
    bottom: 10px;
    right: 10px;
    border-bottom: 2px solid;
    border-right: 2px solid;
    box-shadow:
      2px 2px 10px rgba(0, 195, 255, 0.5),
      inset 1px 1px 5px rgba(0, 195, 255, 0.3);
    animation-delay: 1.5s;
  }

  @keyframes bracket-pulse {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
  }

  .loading-bar {
    position: absolute;
    top: 60px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 4px;
    background: rgba(0, 195, 255, 0.2);
    border-radius: 2px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 195, 255, 0.3);
  }

  .loading-progress {
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 195, 255, 0.5) 25%,
      rgba(0, 195, 255, 1) 50%,
      rgba(0, 195, 255, 0.5) 75%,
      transparent 100%
    );
    animation: loading-progress 2s ease-in-out infinite;
    box-shadow: 0 0 20px rgba(0, 195, 255, 0.8);
  }

  @keyframes loading-progress {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(200%);
    }
  }

  .loading-text {
    position: absolute;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    font-family: 'Courier New', monospace;
    font-size: 14px;
    font-weight: bold;
    color: var(--glowColor, cyan);
    text-shadow:
      0 0 5px rgba(0, 195, 255, 0.8),
      0 0 10px rgba(0, 195, 255, 0.6),
      0 0 15px rgba(0, 195, 255, 0.4);
    letter-spacing: 3px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .text-glow {
    animation: text-flicker 3s ease-in-out infinite;
  }

  @keyframes text-flicker {
    0%, 100% {
      opacity: 1;
      text-shadow:
        0 0 5px rgba(0, 195, 255, 0.8),
        0 0 10px rgba(0, 195, 255, 0.6),
        0 0 15px rgba(0, 195, 255, 0.4);
    }
    50% {
      opacity: 0.8;
      text-shadow:
        0 0 10px rgba(0, 195, 255, 1),
        0 0 20px rgba(0, 195, 255, 0.8),
        0 0 30px rgba(0, 195, 255, 0.6);
    }
  }

  .loading-dots span {
    animation: dot-blink 1.5s ease-in-out infinite;
  }

  .loading-dots span:nth-child(2) {
    animation-delay: 0.3s;
  }

  .loading-dots span:nth-child(3) {
    animation-delay: 0.6s;
  }

  @keyframes dot-blink {
    0%, 80%, 100% {
      opacity: 0;
    }
    40% {
      opacity: 1;
    }
  }

  .blur-placeholder {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(20px);
    transform: scale(1.1);
    z-index: 1;
    opacity: 1;
    transition: opacity 0.6s ease-out;
  }

  .blur-placeholder.loaded {
    opacity: 0;
  }

  .futuristic-image {
    position: relative;
    z-index: 2;
    opacity: 0;
    transform: scale(0.95);
    transition:
      opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow:
      0 0 40px rgba(0, 195, 255, 0.2),
      inset 0 0 20px rgba(0, 195, 255, 0.1);
  }

  .futuristic-image.loaded {
    opacity: 1;
    transform: scale(1);
  }

  .dark .futuristic-skeleton {
    background: linear-gradient(135deg, #000000 0%, #0a0a1e 50%, #000000 100%);
  }

  .futuristic-image-wrapper.neon .corner-bracket {
    border-color: #ff00ff;
    box-shadow:
      0 0 10px rgba(255, 0, 255, 0.6),
      inset 0 0 5px rgba(255, 0, 255, 0.4);
  }

  .futuristic-image-wrapper.neon .loading-bar {
    background: rgba(255, 0, 255, 0.2);
  }

  .futuristic-image-wrapper.neon .loading-progress {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 0, 255, 0.5) 25%,
      rgba(255, 0, 255, 1) 50%,
      rgba(255, 0, 255, 0.5) 75%,
      transparent 100%
    );
  }

  .futuristic-image-wrapper.neon .loading-text {
    color: #ff00ff;
    text-shadow:
      0 0 5px rgba(255, 0, 255, 0.8),
      0 0 10px rgba(255, 0, 255, 0.6),
      0 0 15px rgba(255, 0, 255, 0.4);
  }

  .futuristic-image-wrapper.minimal .corner-bracket {
    opacity: 0.4;
    border-width: 1px;
  }

  .futuristic-image-wrapper.minimal .scanlines {
    opacity: 0.3;
  }
</style>

<script>

  function initFuturisticImages() {
    const wrappers = document.querySelectorAll('[data-futuristic-wrapper]');

    wrappers.forEach((wrapper) => {
      const skeleton = wrapper.querySelector('[data-futuristic-skeleton]');
      const blurPlaceholder = wrapper.querySelector('[data-blur-placeholder]');
      const actualImage = wrapper.querySelector('[data-futuristic-image]') as HTMLImageElement;

      if (!actualImage) return;

      const completeLoading = () => {
        
        skeleton?.classList.add('loaded');

        blurPlaceholder?.classList.add('loaded');

        actualImage.classList.add('loaded');

        setTimeout(() => {
          skeleton?.remove();
          blurPlaceholder?.remove();
        }, 800);
      };

      if (actualImage.complete && actualImage.naturalHeight !== 0) {
        
        setTimeout(completeLoading, 600);
      } else {
        
        actualImage.addEventListener('load', () => {
          completeLoading();
        });

        actualImage.addEventListener('error', () => {
          console.warn('Futuristic image failed to load:', actualImage.src);
          completeLoading(); 
        });
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFuturisticImages);
  } else {
    initFuturisticImages();
  }

  document.addEventListener('astro:after-swap', initFuturisticImages);
  document.addEventListener('astro:page-load', initFuturisticImages);
</script>
