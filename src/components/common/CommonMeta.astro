---
import { getAsset } from '~/utils/permalinks';
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />
<meta name="darkreader-lock" />

<!-- Preconnect to important third-party origins -->
<link rel="preconnect" href="https://cdn.splitbee.io" crossorigin />
<link rel="dns-prefetch" href="https://cdn.pixabay.com" />
<link rel="dns-prefetch" href="https://img.icons8.com" />

<!-- Preload critical fonts -->
<link rel="preload" href="/fonts/Anklepants.woff2" as="font" type="font/woff2" crossorigin />

<!-- Load fonts asynchronously with font-display: swap -->
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<link rel="sitemap" href={getAsset('/sitemap-index.xml')} />
