---
import '@fontsource-variable/baloo-bhaijaan-2';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Baloo Bhaijaan 2 Variable';
    --aw-font-serif: 'Baloo Bhaijaan 2 Variable';
    --aw-font-heading: 'Baloo Bhaijaan 2 Variable';

    --aw-color-primary: rgb(0, 195, 255);
    --aw-color-secondary: rgb(114, 122, 129);
    --aw-color-accent: rgb(0, 112, 218);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);

    --aw-color-bg-page: rgb(255, 255, 255);
    --aw-color-bg-page-dark: rgb(0, 0, 0);

    --aw-link-active: rgb(0, 195, 255);

    ::selection {
      background-color: rgb(0, 195, 255);
    }
  }

  .dark {
    --aw-font-sans: 'Baloo Bhaijaan 2 Variable';
    --aw-font-serif: 'Baloo Bhaijaan 2 Variable';
    --aw-font-heading: 'Baloo Bhaijaan 2 Variable';

    --aw-color-primary: rgb(0, 195, 255);
    --aw-color-secondary: rgb(109, 107, 98);
    --aw-color-accent: rgb(0, 112, 218);

    --aw-color-text-heading: rgb(246, 253, 255);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);

    --aw-color-bg-page: rgb(0, 0, 0);

    --aw-link-active: rgb(0, 195, 255);

    ::selection {
      background-color: rgb(0, 195, 255);
    }
  }
</style>
