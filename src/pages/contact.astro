---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'P X L N G N ~ KONTAKT',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Lass uns in Verbindung bleiben!" />

  <ContactUs
    id="form"
    title="Schick mir noch heute eine Nachricht!"
    subtitle="Für schnellere Antworten schau dir doch mal meinen FAQ-Bereich an. Vielleicht findest du dort direkt die Lösung, die du suchst! Wenn nicht, freue ich mich, dir zu helfen."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-Mail',
      },
    ]}
    textarea={{
      label: 'Nachricht',
    }}
    disclaimer={{
      label:
        'Mit dem Absenden dieses Kontaktformulars erkennst du die Erhebung deiner persönlichen Daten an und stimmst ihr zu.',
    }}
    description="Ich antworte normalerweise innerhalb von 24 Geschäftsstunden."
  />
</Layout>
