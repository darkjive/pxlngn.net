---
import Layout from '~/layouts/PageLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
const metadata = {
  title: 'pxlngn | Projekt | Wohlfühlgesundheit',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Besuchen',
        href: 'https://wohlfühlgesundheit.de/',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title"> Webseite für Gesundheitspraxis </Fragment>

    <Fragment slot="subtitle">
      Hier eine Webseite für eine Gesundheitspraxis mit Fokus auf Performance und Benutzerfreundlichkeit.
    </Fragment>
    
  </Hero>
  <Features3
    classes={{
      container: 'max-w-5xl border-b border-t border-gray-50/100 dark:border-gray-500/20 dark:bg-transparent',
    }}
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'Beschreibung:',
        description:
          'Entwickelt eine extrem performante und responsive Webseite für eine Gesundheitspraxis. Die Inhalte vermitteln fachliche Informationen, insbesondere zum Thema Darmgesundheit.',
      },
      {
        title: 'Rolle:',
        description:
          'Design und Entwicklung der Webseite mit AstroJS und Tailwind CSS. Verfassen der Texte für den Bereich "Darmgesundheit" und Optimierung der Ladezeiten.',
      },
      {
        title: 'Technologie:',
        description:
          'AstroJS für schnelle und effiziente Entwicklung, Tailwind CSS für modernes Design und responsives Layout.',
      },
      {
        title: 'Features:',
        description: 'Dark/Light-Modus, hohe Performance, responsives Design und benutzerfreundliche Inhalte.',
      },
    ]}
  />
  <Hero
    image={{
      src: '~/assets/images/projekt-webseite-gesundheitspraxis-stefani-leidel.jpg',
      alt: 'Webseite für Gesundheitspraxis',
    }}
  >
    
  </Hero>

</Layout>
