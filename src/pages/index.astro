          sizes="(max-width: 768px) 100vw, 432px"
          layout="responsive"
          loading="eager"
          futuristicEffect="cyber"
          glowColor="cyan"
          data-glitch
          class="mx-auto w-full rounded-lg shadow-lg"
        />
