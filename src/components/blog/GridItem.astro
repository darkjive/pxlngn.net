---
import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import Image from '~/components/common/Image.astro';

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = await findImage(post.image);

const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';
---

<article class="mb-6">
  <div class="relative mb-6 rounded bg-gray-400 shadow-lg dark:bg-slate-700 md:h-64">
    {
      image &&
        (link ? (
          <a href={link}>
            <Image
              src={image}
              class="w-full rounded bg-gray-400 shadow-lg dark:bg-slate-700 md:h-full"
              widths={[400, 900]}
              width={400}
              sizes="(max-width: 900px) 400px, 900px"
              alt={post.title}
              aspectRatio="16:9"
              layout="cover"
              loading="lazy"
              decoding="async"
              title={post.title}
            />
          </a>
        ) : (
          <Image
            src={image}
            class="w-full rounded bg-gray-400 shadow-lg dark:bg-slate-700 md:h-full"
            widths={[400, 900]}
            width={400}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            aspectRatio="16:9"
            layout="cover"
            loading="lazy"
            decoding="async"
            title={post.title}
          />
        ))
    }
  </div>

  <h3 class="from-neutral mb-2 font-heading text-xl leading-tight dark:text-slate-300 sm:text-2xl">
    {
      link ? (
        <a class="inline-block font-semibold hover:text-primary dark:hover:text-primary" href={link}>
          {post.title}
        </a>
      ) : (
        post.title
      )
    }
  </h3>

  <p class="text-lg text-muted">{post.excerpt}</p>
</article>
