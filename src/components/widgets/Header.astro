---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import { getHomePermalink } from '~/utils/permalinks';

export interface Props {
  showToggleTheme?: boolean;
  githubUrl?: string;
  emailUrl?: string;
}

const { showToggleTheme = true, githubUrl = 'https://github.com/', emailUrl = 'mailto:info@example.com' } = Astro.props;
---

<header class="sticky top-0 z-40 w-full border-b border-gray-200 bg-white dark:border-gray-700 dark:bg-black">
  <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3">
    <!-- Logo links -->
    <a href={getHomePermalink()} class="mr-4 flex items-center">
      <Logo />
    </a>

    <!-- Buttons rechts -->
    <div class="pointer-events-auto flex items-center gap-3">
      {showToggleTheme && <ToggleTheme iconClass="w-6 h-6" />}

      <a
        href={githubUrl}
        aria-label="GitHub"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center rounded-lg bg-gray-100 p-2.5 text-sm text-muted hover:bg-gray-200 hover:text-primary dark:bg-gray-900/60 dark:hover:bg-gray-800"
      >
        <Icon name="tabler:brand-github" class="h-5 w-5" />
      </a>

      <a
        href={emailUrl}
        aria-label="E-Mail"
        class="inline-flex items-center rounded-lg bg-gray-100 p-2.5 text-sm text-muted hover:bg-gray-200 hover:text-primary dark:bg-gray-900/60 dark:hover:bg-gray-800"
      >
        <Icon name="tabler:mail" class="h-5 w-5" />
      </a>
    </div>
  </div>
</header>
