---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
import type { CallToAction as Props } from '~/types';

const {
  variant = 'secondary',
  target,
  text = Astro.slots.render('default'),
  icon = '',
  class: className = '',
  type,
  copyUrl,
  ...rest
} = Astro.props;

const variants = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  tertiary: 'btn-tertiary',
  link: 'cursor-pointer text-primary hover:text-secondary',
};
---

{
  type === 'button' || type === 'submit' || type === 'reset' ? (
    <button data-animate type={type} class={twMerge(variants[variant] || '', className)} {...rest}>
      <Fragment set:html={text} />
      {icon && <Icon name={icon} class="-mr-1.5 ml-1 inline-block h-5 w-5 rtl:-ml-1.5 rtl:mr-1" />}
    </button>
  ) : copyUrl ? (
    <button
      data-animate
      type="button"
      class={twMerge(variants[variant] || '', 'inline-flex items-center gap-2', className)}
      data-copy-url={copyUrl}
    >
      <Fragment set:html={text} />
      <Icon name="tabler:copy-filled" class="inline-block h-4 w-4" />
    </button>
  ) : (
    <a
      data-animate
      class={twMerge(variants[variant] || '', className)}
      {...(target ? { target: target, rel: 'noopener noreferrer' } : {})}
      {...rest}
    >
      <Fragment set:html={text} />
      {icon && <Icon name={icon} class="-mr-1.5 ml-1 inline-block h-5 w-5 rtl:-ml-1.5 rtl:mr-1" />}
    </a>
  )
}
