---
import type { Headline as Props } from '~/types';
import { twMerge } from 'tailwind-merge';
import AnimatedTitle from './AnimatedTitle.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
  headingLevel = 'h2',
} = Astro.props;

const { container: containerClass = 'max-w-3xl', subtitle: subtitleClass = 'text-xl', title: titleClass = '' } = classes;
---

{
  (title || subtitle || tagline) && (
    <div class={twMerge('mb-8 text-center md:mx-auto md:mb-12', containerClass)}>
      {tagline && (
        <p
          class="font-bold uppercase tracking-normal text-slate-900/30 dark:text-slate-300/50"
          set:html={tagline}
          data-animate
          data-anim-type="fade-down"
        />
      )}
      {title && (
        <AnimatedTitle
          title={title}
          headingLevel={headingLevel}
          class={twMerge('text-shadow-[1px_1px_0px_0px_#fff] Anklepants mb-4 break-all text-5xl dark:text-gray-200', titleClass)}
        />
      )}
      {subtitle && (
        <p
          data-animate
          data-anim-type="typewriter"
          class={twMerge('mt-4 text-muted', subtitleClass)}
          set:html={subtitle}
        />
      )}
    </div>
  )
}
