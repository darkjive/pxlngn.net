---
import '@fontsource-variable/baloo-bhaijaan-2';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Baloo Bhaijaan 2 Variable';
    --aw-font-serif: 'Baloo Bhaijaan 2 Variable';
    --aw-font-heading: 'Baloo Bhaijaan 2 Variable';

    --aw-color-primary: rgb(0, 195, 255);
    --aw-color-secondary: rgb(114, 122, 129);
    --aw-color-accent: rgb(0, 112, 218);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(100, 100, 100);

    --aw-color-bg-page: rgb(255, 255, 255);
    --aw-color-bg-page-dark: rgb(0, 0, 0);

    --aw-link-active: rgb(0, 195, 255);

    ::selection {
      background-color: rgb(0, 195, 255);
    }
  }

  .dark {
    --aw-font-sans: 'Baloo Bhaijaan 2 Variable';
    --aw-font-serif: 'Baloo Bhaijaan 2 Variable';
    --aw-font-heading: 'Baloo Bhaijaan 2 Variable';

    --aw-color-primary: rgb(0, 195, 255);
    --aw-color-secondary: rgb(109, 107, 98);
    --aw-color-accent: rgb(0, 112, 218);

    --aw-color-text-heading: rgb(246, 253, 255);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246);

    --aw-color-bg-page: rgb(0, 0, 0);

    --aw-link-active: rgb(0, 195, 255);

    ::selection {
      background-color: rgb(0, 195, 255);
    }
  }

  .typing {
    display: inline;
    color: rgba(60, 0, 255, 0.897);
    animation:
      typing 3s steps(20, end),
      colorChange 3s ease-in-out infinite;
  }

  .cursor {
    display: inline-block;
    width: 3px;
    height: 23px;
    background-color: rgb(255, 255, 255);
    animation: blink 0.7s infinite;
  }

  @keyframes typing {
    0% {
      width: 0;
    }

    100% {
      width: 100%;
    }
  }

  @keyframes colorChange {
    0%,
    100% {
      color: rgba(0, 195, 255, 0.897);
    }

    50% {
      color: rgba(255, 155, 5, 0.897);
    }
  }

  @keyframes blink {
    0%,
    100% {
      background-color: transparent;
    }

    50% {
      background-color: rgb(0, 0, 0);
    }
  }
  .aw-link-active,
  .dark .aw-link-activ {
    color: var(--aw-link-active);
  }

  /* Auto-hide navigation on scroll */
  #header[data-aw-sticky-header] {
    transition: transform 0.3s ease-in-out;
  }

  #header[data-aw-sticky-header].header-hidden {
    transform: translateY(-100%);
  }

  #header[data-aw-sticky-header].header-visible {
    transform: translateY(0);
  }
  [data-animate]:not([data-animated]) {
    opacity: 0;
  }

  [data-animate][data-animated] {
    opacity: 1;
  }
</style>
