---
/**
 * Futuristic Skeleton Loader Component
 * Reusable cyber-style loading animation with scanlines and corner brackets
 */
interface Props {
  glowColor?: string;
  effect?: 'cyber' | 'neon' | 'minimal';
}

const { glowColor = 'cyan', effect = 'cyber' } = Astro.props;
---

<div class={`futuristic-skeleton ${effect}`} data-futuristic-skeleton>
  <div class="skeleton-inner">
    <!-- Scanlines -->
    <div class="scanlines"></div>

    <!-- Corner Brackets (Cyber Style) -->
    <div class="corner-bracket top-left"></div>
    <div class="corner-bracket top-right"></div>
    <div class="corner-bracket bottom-left"></div>
    <div class="corner-bracket bottom-right"></div>

    <!-- Loading Bar -->
    <div class="loading-bar">
      <div class="loading-progress"></div>
    </div>

    <!-- Glowing Text -->
    <div class="loading-text">
      <span class="text-glow">INITIALIZING</span>
      <span class="loading-dots">
        <span>.</span><span>.</span><span>.</span>
      </span>
    </div>
  </div>
</div>

<style is:global define:vars={{ glowColor }}>
  /* Skeleton Loader */
  .futuristic-skeleton {
    position: absolute;
    inset: 0;
    z-index: 10;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity;
  }

  .futuristic-skeleton.loaded {
    opacity: 0;
    pointer-events: none;
  }

  .skeleton-inner {
    position: relative;
    width: 100%;
    height: 100%;
    contain: layout style paint;
  }

  /* Scanlines Effect */
  .scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 195, 255, 0.03) 0px,
      rgba(0, 195, 255, 0.03) 1px,
      transparent 1px,
      transparent 2px
    );
    animation: scanline-move 8s linear infinite;
    pointer-events: none;
    will-change: transform;
    transform: translateZ(0);
  }

  @keyframes scanline-move {
    0% {
      transform: translateY(0) translateZ(0);
    }
    100% {
      transform: translateY(100%) translateZ(0);
    }
  }

  /* Cyber Corner Brackets */
  .corner-bracket {
    position: absolute;
    width: 30px;
    height: 30px;
    border-color: var(--glowColor, cyan);
    opacity: 0.8;
    animation: bracket-pulse 2s ease-in-out infinite;
    will-change: opacity, transform;
  }

  .corner-bracket.top-left {
    top: 10px;
    left: 10px;
    border-top: 2px solid;
    border-left: 2px solid;
    box-shadow:
      -2px -2px 10px rgba(0, 195, 255, 0.5),
      inset -1px -1px 5px rgba(0, 195, 255, 0.3);
  }

  .corner-bracket.top-right {
    top: 10px;
    right: 10px;
    border-top: 2px solid;
    border-right: 2px solid;
    box-shadow:
      2px -2px 10px rgba(0, 195, 255, 0.5),
      inset 1px -1px 5px rgba(0, 195, 255, 0.3);
    animation-delay: 0.5s;
  }

  .corner-bracket.bottom-left {
    bottom: 10px;
    left: 10px;
    border-bottom: 2px solid;
    border-left: 2px solid;
    box-shadow:
      -2px 2px 10px rgba(0, 195, 255, 0.5),
      inset -1px 1px 5px rgba(0, 195, 255, 0.3);
    animation-delay: 1s;
  }

  .corner-bracket.bottom-right {
    bottom: 10px;
    right: 10px;
    border-bottom: 2px solid;
    border-right: 2px solid;
    box-shadow:
      2px 2px 10px rgba(0, 195, 255, 0.5),
      inset 1px 1px 5px rgba(0, 195, 255, 0.3);
    animation-delay: 1.5s;
  }

  @keyframes bracket-pulse {
    0%,
    100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
  }

  /* Loading Bar */
  .loading-bar {
    position: absolute;
    top: 60px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 4px;
    background: rgba(0, 195, 255, 0.2);
    border-radius: 2px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 195, 255, 0.3);
  }

  .loading-progress {
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 195, 255, 0.5) 25%,
      rgba(0, 195, 255, 1) 50%,
      rgba(0, 195, 255, 0.5) 75%,
      transparent 100%
    );
    animation: loading-progress 2s ease-in-out infinite;
    box-shadow: 0 0 20px rgba(0, 195, 255, 0.8);
    will-change: transform;
  }

  @keyframes loading-progress {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(200%);
    }
  }

  /* Loading Text */
  .loading-text {
    position: absolute;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    font-family: 'Courier New', monospace;
    font-size: 14px;
    font-weight: bold;
    color: var(--glowColor, cyan);
    text-shadow:
      0 0 5px rgba(0, 195, 255, 0.8),
      0 0 10px rgba(0, 195, 255, 0.6),
      0 0 15px rgba(0, 195, 255, 0.4);
    letter-spacing: 3px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .text-glow {
    animation: text-flicker 3s ease-in-out infinite;
  }

  @keyframes text-flicker {
    0%,
    100% {
      opacity: 1;
      text-shadow:
        0 0 5px rgba(0, 195, 255, 0.8),
        0 0 10px rgba(0, 195, 255, 0.6),
        0 0 15px rgba(0, 195, 255, 0.4);
    }
    50% {
      opacity: 0.8;
      text-shadow:
        0 0 10px rgba(0, 195, 255, 1),
        0 0 20px rgba(0, 195, 255, 0.8),
        0 0 30px rgba(0, 195, 255, 0.6);
    }
  }

  /* Loading Dots Animation */
  .loading-dots span {
    animation: dot-blink 1.5s ease-in-out infinite;
  }

  .loading-dots span:nth-child(2) {
    animation-delay: 0.3s;
  }

  .loading-dots span:nth-child(3) {
    animation-delay: 0.6s;
  }

  @keyframes dot-blink {
    0%,
    80%,
    100% {
      opacity: 0;
    }
    40% {
      opacity: 1;
    }
  }

  /* Dark mode adjustments */
  .dark .futuristic-skeleton {
    background: linear-gradient(135deg, #000000 0%, #0a0a1e 50%, #000000 100%);
  }

  /* Neon Effect Variant */
  .futuristic-skeleton.neon .corner-bracket {
    border-color: #ff00ff;
    box-shadow:
      0 0 10px rgba(255, 0, 255, 0.6),
      inset 0 0 5px rgba(255, 0, 255, 0.4);
  }

  .futuristic-skeleton.neon .loading-bar {
    background: rgba(255, 0, 255, 0.2);
  }

  .futuristic-skeleton.neon .loading-progress {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 0, 255, 0.5) 25%,
      rgba(255, 0, 255, 1) 50%,
      rgba(255, 0, 255, 0.5) 75%,
      transparent 100%
    );
  }

  .futuristic-skeleton.neon .loading-text {
    color: #ff00ff;
    text-shadow:
      0 0 5px rgba(255, 0, 255, 0.8),
      0 0 10px rgba(255, 0, 255, 0.6),
      0 0 15px rgba(255, 0, 255, 0.4);
  }

  /* Minimal Effect Variant */
  .futuristic-skeleton.minimal .corner-bracket {
    opacity: 0.4;
    border-width: 1px;
  }

  .futuristic-skeleton.minimal .scanlines {
    opacity: 0.3;
  }
</style>
